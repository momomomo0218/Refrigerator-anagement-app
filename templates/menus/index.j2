{% extends 'base.j2' %}

{% block css %}
    <style>
        ul {
            list-style-type: none;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: .5rem;
        }

        li {
            padding: 1rem;
            border: 1px solid #000;
            border-radius: 0.5rem;
            width: 350px;
            text-align: center;
        }
        h1 {
            text-align: center;
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }
    </style>
{% endblock %}

{% block title %}Menu List{% endblock %}

{% block content %}
    <h1>メニューリスト</h1>
    <ul>
        {% for menu in menus %}
            <li>{{ menu.name }}</li>
        {% endfor %}
    </ul>
{% endblock %}